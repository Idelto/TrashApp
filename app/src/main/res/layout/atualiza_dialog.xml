<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Atualize seus dados..."
        android:textColor="@color/colorText"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textCelular_Dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Qual seu celular ?"
        android:textColor="@color/colorText"
        android:textColorHint="@android:color/darker_gray"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/txtCelular_Dialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="phone" />


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textCep_Dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Qual seu CEP ?"
        android:textColor="@color/colorText"
        android:textColorHint="@android:color/darker_gray"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textCelular_Dialog"
        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/txtCep_Dialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number" />


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textRua_Dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Qual sua Rua ?"
        android:textColor="@color/colorText"
        android:textColorHint="@android:color/darker_gray"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textCep_Dialog"
        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/txtRua_Dialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="text" />


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textNumero_Dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Qual seu nÃºmero ?"
        android:textColor="@color/colorText"
        android:textColorHint="@android:color/darker_gray"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textRua_Dialog"
        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/txtNumero_Dialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number" />


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textComplemento_Dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Complemento ?"
        android:textColor="@color/colorText"
        android:textColorHint="@android:color/darker_gray"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textNumero_Dialog"
        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/txtComplemento_Dialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="text" />


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textBairro_Dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Qual seu Bairro ?"
        android:textColor="@color/colorText"
        android:textColorHint="@android:color/darker_gray"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textComplemento_Dialog"
        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/txtBairro_Dialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="text" />


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textCidade_Dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Qual sua Cidade ?"
        android:textColor="@color/colorText"
        android:textColorHint="@android:color/darker_gray"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textBairro_Dialog"
        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/txtCidade_Dialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="text" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnAtualizaDados"
        android:layout_width="120dp"
        android:layout_height="52dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/border_button"
        android:text="Atualizar"
        android:textColor="@color/btntextColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textCidade_Dialog"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnNaoAtualiza"
        android:layout_width="120dp"
        android:layout_height="52dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/border_button"
        android:text="Descatar"
        android:textColor="@color/btntextColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textCidade_Dialog"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>